<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/upperBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#C5050C"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/image3"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/image2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:src="@drawable/image1"

        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="24dp"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/red"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="Office Hour Meeting Summary with Prof. JohnSmith\n路Date: 2023-10-16\n路Time
            : 2:00 PM -2:30 PM\n路Course: CS101 -Introduction to \n路ProgrammingLocation: Room 204, Science Building
            \nDiscussion Points:\n1. CS101 Assignment Review: During themeeting, we reviewed the recent assignmentin
            CS101. Prof. Smith provided valuablefeedback on my code, pointing out areas forimprovement in terms of
            efficiency and code structure.\n2.Upcoming Exam: We discussed the formatand content of the upcoming CS101 exam.Prof, Smith clarified the key topics and
emphasized the importance ofunderstandingfundamental programming concepts.\n3.Additional Resources: Prof. Smith
recommended supplementary learningresources, including online tutorials anc
coding practice platforms, to help me
strengthen my programming skills.\n4.Questions Clarified: I had a few questionsregarding specific programming conceptssuch as loops and conditional statemnentswhich Prof. Smith patiently explained andprovided examples for better understanding."
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/radius1"
            app:layout_constraintBottom_toTopOf="@+id/bookingBack" />
        <Button
            android:id="@+id/bookingBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:textAllCaps="false"
            android:background="@drawable/radius1"
            android:layout_marginBottom="24dp"
            android:text="Go back"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>